<% if user_signed_in? then %>
  <%= link_to current_user do %>
   #{current_user.firstname} #{current_user.lastname}
  <% end %>
<% else %>
<div class="col-10 col-centered max-height"> 
  <div class="jumbotron">
    <h1>Bienvenue!</h1>
    <p>Enregistrez-vous ou connectez-vous pour voir cette page</p>
    <p>
      <%= link_to "S'enregistrer", new_user_registration_path, class: 'btn btn-primary btn-lg' %>
      <%= link_to "Se connecter", new_user_session_path, class: 'btn btn-primary btn-lg' %>
    </p>
  </div>
</div>
<% end %>

